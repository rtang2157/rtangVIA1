.via-scroller::-webkit-scrollbar {
    width: 8px;
    height: 8px;
}
.via-scroller::-webkit-scrollbar-track {
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
    border-radius: 8px;
}
.via-scroller::-webkit-scrollbar-thumb {
    border-radius: 8px;
    background-color: #80bfff;
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.5);
}

/* container view */
.via-scroller .e::-webkit-scrollbar {
    width: 8px;
    height: 8px;
}
.via-scroller .e::-webkit-scrollbar-track {
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
