/* ACE editor */
.via-scroller .ace_scrollbar-v::-webkit-scrollbar,
.via-scroller .ace_scrollbar-h::-webkit-scrollbar {
    width: 8px;
    height: 8px;
}
.via-scroller .ace_scrollbar-v::-webkit-scrollbar-track,
.via-scroller .ace_scrollbar-h::-webkit-scrollbar-track {
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
    border-radius: 8px;
}
.via-scroller .ace_scrollbar-v::-webkit-scrollbar-thumb,
.via-scroller .ace_scrollbar-h::-webkit-scrollbar-thumb {
    border-radius: 8px;
    background-color: #80bfff;
    -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.5);
}
.via-scroller .ace_scrollbar-v::-webkit-scrollbar-corner,
.via-scroller .ace_scrollbar-v::-webkit-scrollbar-thumb:window-inactive,
.via-scroller .ace_scrollbar-h::-webkit-scrollbar-corner,
.via-scroller .ace_scrollbar-h::-webkit-scrollbar-thumb:window-inactive {
    background: rgba(100, 100, 100, 0.4);
}
.via-scroller .ace_scroller {
    right:8px !important;
    bottom:8px !important;
}

